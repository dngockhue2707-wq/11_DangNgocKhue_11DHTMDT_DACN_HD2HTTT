@model WebPhongKham.Models.ViewModels.RegisterViewModel
@{
    Layout = "_Layout";
}

<div class="container mt-5" style="max-width: 550px;">
    <h3 class="text-center mb-4">Đăng ký tài khoản</h3>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">
            @ViewBag.Error
        </div>
    }

    <form method="post">

        <div class="mb-3">
            <label class="form-label">Họ tên</label>
            <input class="form-control" name="HoTen" value="@Model.HoTen" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Ngày sinh</label>
            <input class="form-control" type="date" name="NgaySinh"
                   value="@(Model.NgaySinh?.ToString("yyyy-MM-dd"))" />
        </div>

        <div class="mb-3">
            <label class="form-label">Giới tính</label>
            <select class="form-select" name="GioiTinh">
                <option value="">-- Chọn --</option>
                <option value="Nam" selected="@(Model.GioiTinh=="Nam")">Nam</option>
                <option value="Nữ" selected="@(Model.GioiTinh=="Nữ")">Nữ</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Địa chỉ</label>
            <input class="form-control" name="DiaChi" value="@Model.DiaChi" />
        </div>

        <div class="mb-3">
            <label class="form-label">Số điện thoại</label>
            <input class="form-control" name="SDT" value="@Model.SDT" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" type="email" name="Email" value="@Model.Email" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input class="form-control" type="password" name="MatKhau" required />
        </div>

        <button class="btn btn-primary w-100">
            Đăng ký
        </button>

        <div class="text-center mt-3">
            <a href="/Account/Login">Đã có tài khoản? Đăng nhập</a>
        </div>
    </form>
</div>
