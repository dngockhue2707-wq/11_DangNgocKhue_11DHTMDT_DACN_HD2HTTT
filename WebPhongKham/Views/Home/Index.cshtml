@model List<WebPhongKham.Models.TinTuc>

@{
    ViewData["Title"] = "Trang chủ - DNK Clinic";
}

<section class="banner banner-fix">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6 banner-text">
                <h1>Khỏe mạnh <br> Tận tâm &amp; Chuyên nghiệp</h1>

                <p>
                    DNK Clinic hỗ trợ đặt lịch khám nhanh chóng,
                    giúp bạn tiết kiệm thời gian và chủ động hơn trong chăm sóc sức khỏe.
                </p>

                <a href="/DatLich/Index" class="btn btn-danger btn-round-full">
                    ĐẶT LỊCH NGAY
                </a>
            </div>

            <div class="col-lg-6 banner-image">
                <img src="~/images/nen.jpg" class="img-fluid rounded shadow" alt="Phòng khám DNK" />
            </div>

        </div>
    </div>
</section>

<section class="features mt-5">
    <div class="container">
        <div class="row text-center">

            <div class="col-md-4">
                <div class="feature-box-fix">
                    <i class="icofont-calendar"></i>
                    <h5>Đặt lịch Online</h5>
                    <p>Dễ dàng – nhanh chóng</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-box-fix">
                    <i class="icofont-clock-time"></i>
                    <h5>Giờ làm việc</h5>
                    <p>Thứ 2 - Thứ 6</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-box-fix">
                    <i class="icofont-phone"></i>
                    <h5>Hỗ trợ</h5>
                    <p>0123 456 789</p>
                </div>
            </div>

        </div>
    </div>
</section>

<section class="section about about-optimize">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6">
                <img src="~/images/chung.jpg" class="img-fluid rounded shadow" alt="Đội ngũ bác sĩ DNK" />
            </div>

            <div class="col-lg-6">
                <h2>DNK Clinic - Phòng khám đáng tin cậy</h2>
                <p class="mt-3">
                    Với đội ngũ bác sĩ chuyên môn cao và thái độ phục vụ tận tâm,
                    DNK Clinic mang đến trải nghiệm khám chữa bệnh an toàn, nhanh chóng và thuận tiện.
                </p>

                <a href="/BacSi" class="btn btn-outline-primary btn-round-full mt-2">
                    Xem danh sách bác sĩ
                </a>
            </div>
        </div>
    </div>
</section>

<section class="section appoinment appoinment-optimize">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-5 text-center">
                <img src="~/images/dat.jpg" class="img-fluid rounded shadow" alt="Đặt lịch khám DNK" />
            </div>

            <div class="col-lg-7">
                <div class="form-wrap">
                    <h3 class="mb-3">Đặt lịch khám nhanh</h3>

                    <form asp-controller="DatLich" asp-action="Index" method="get">
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Họ tên</label>
                                    <input class="form-control" placeholder="Nhập họ tên" disabled />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Số điện thoại</label>
                                    <input class="form-control" placeholder="Nhập số điện thoại" disabled />
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Ngày khám</label>
                                    <input type="date" class="form-control" disabled />
                                </div>
                            </div>

                        </div>

                        <button type="submit" class="btn btn-primary btn-round-full mt-3">
                            Chuyển sang đặt lịch chi tiết
                        </button>
                    </form>

                    <small class="text-muted d-block mt-2">
                        Vui lòng điền đầy đủ thông tin tại trang đặt lịch chi tiết.
                    </small>

                </div>
            </div>

        </div>
    </div>
</section>

<section class="news-section py-5" style="background-color:#f5f7fb;">
    <div class="container">

        <div class="row mb-4 align-items-end">
            <div class="col-md-8">
                <h2 class="mb-2" style="font-weight:700;color:#1a3f8b;">Tin tức &amp; Thông báo</h2>
                <p class="mb-0" style="color:#6c757d;">
                    Cập nhật thông tin mới nhất từ DNK Clinic về lịch làm việc, chương trình ưu đãi và kiến thức sức khỏe.
                </p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a href="#" class="btn btn-outline-primary btn-round-full">
                    Xem tất cả bài viết
                </a>
            </div>
        </div>

        @if (Model != null && Model.Count > 0)
        {
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="h-100 p-4 bg-white shadow-sm rounded-3">
                            <span class="d-inline-block mb-2 px-3 py-1 rounded-pill"
                                  style="background:#e9f1ff;color:#1a3f8b;font-size:13px;">
                                @item.LoaiTin
                            </span>
                            <h5 class="mb-2" style="font-weight:600;">
                                @item.TieuDe
                            </h5>
                            <p class="mb-2" style="font-size:14px;color:#6c757d;">
                                @item.MoTaNgan
                            </p>
                            <div class="d-flex justify-content-between" style="font-size:13px;color:#9ca3af;">
                                <span>@item.NgayDang.ToString("dd/MM/yyyy")</span>
                                <a href="#" style="color:#2563eb;text-decoration:none;">Chi tiết</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">Hiện chưa có tin tức nào.</p>
        }
    </div>
</section>
