@using WebPhongKham.Data
@using Microsoft.EntityFrameworkCore
@inject ClinicDbContext Db

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    int.TryParse(Context.Request.Query["idBacSi"], out var qsId);

    var firstDoctorId = await Db.BacSis.AsNoTracking().Select(x => x.IdBacSi).FirstOrDefaultAsync();
    var targetDoctorId = qsId > 0 ? qsId : firstDoctorId;

    var hasDoctor = targetDoctorId != 0;
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="admin-body">
    <div class="admin-wrap">
        <aside class="admin-sidebar">
            <div class="brand">
                <div class="brand-icon"><i class="bi bi-hospital"></i></div>
                <div class="brand-text">
                    <div class="brand-title">Web Phòng Khám</div>
                    <div class="brand-sub">ADMIN</div>
                </div>
            </div>

            <div class="sidebar-section">Tổng quan</div>
            <nav class="nav flex-column sidebar-nav">
                <a class="nav-link @((currentController=="Admin" && currentAction=="Dashboard") ? "active" : "")"
                   asp-controller="Admin" asp-action="Dashboard">
                    <i class="bi bi-speedometer2"></i><span>Dashboard</span>
                </a>
            </nav>

            <div class="sidebar-section">Quản lý</div>
            <nav class="nav flex-column sidebar-nav">
                <a class="nav-link @((currentController=="Admin" && currentAction=="BacSi") ? "active" : "")"
                   asp-controller="Admin" asp-action="BacSi">
                    <i class="bi bi-heart-pulse"></i><span>Bác sĩ</span>
                </a>

                <a class="nav-link @((currentController=="Admin" && currentAction=="DanhSachLich") ? "active" : "")"
                   asp-controller="Admin" asp-action="DanhSachLich">
                    <i class="bi bi-calendar-check"></i><span>Danh sách lịch</span>
                </a>

                <a class="nav-link @((currentController=="Admin" && currentAction=="NguoiDung") ? "active" : "")"
                   asp-controller="Admin" asp-action="NguoiDung">
                    <i class="bi bi-people"></i><span>Người dùng</span>
                </a>

                <div class="nav-link d-flex align-items-center justify-content-between" data-bs-toggle="collapse" href="#collapseWork" role="button" aria-expanded="false">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-clock-history"></i><span>Lịch làm việc</span>
                    </div>
                    <i class="bi bi-chevron-down small"></i>
                </div>

                <div class="collapse ps-3" id="collapseWork">
                    <a class="nav-link sublink @((currentController=="Admin" && currentAction=="LichLamViec") ? "active" : "")"
                       asp-controller="Admin" asp-action="LichLamViec" asp-route-idBacSi="@(targetDoctorId)">
                        <i class="bi bi-calendar-week"></i><span>Lịch làm việc</span>
                    </a>

                    <a class="nav-link sublink @((currentController=="Admin" && currentAction=="NgayNghi") ? "active" : "")"
                       asp-controller="Admin" asp-action="NgayNghi" asp-route-idBacSi="@(targetDoctorId)">
                        <i class="bi bi-calendar-x"></i><span>Ngày nghỉ</span>
                    </a>

                    @if (!hasDoctor)
                    {
                        <div class="px-2 pb-2 text-muted small">Chưa có bác sĩ để xem lịch.</div>
                    }
                </div>
            </nav>

            <div class="sidebar-section">Hệ thống</div>
            <nav class="nav flex-column sidebar-nav">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-box-arrow-up-right"></i><span>Về trang người dùng</span>
                </a>
                <form class="m-0" method="post" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="nav-link w-100 text-start btn btn-link p-0">
                        <i class="bi bi-box-arrow-right"></i><span>Đăng xuất</span>
                    </button>
                </form>
            </nav>
        </aside>

        <main class="admin-main">
            <header class="admin-topbar">
                <div class="topbar-left">
                    <button class="btn btn-light btn-sm d-lg-none" id="btnToggleSidebar" type="button">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="topbar-title">@ViewData["Title"]</div>
                </div>
            </header>

            <div class="admin-content container-fluid">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success py-2">@TempData["Success"]</div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger py-2">@TempData["Error"]</div>
                }

                @RenderBody()
            </div>

            <footer class="admin-footer">
                <div>© @DateTime.Now.Year - Web Phòng Khám (Admin)</div>
            </footer>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const btn = document.getElementById("btnToggleSidebar");
        if (btn) {
            btn.addEventListener("click", function () {
                document.body.classList.toggle("sidebar-open");
            });
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
