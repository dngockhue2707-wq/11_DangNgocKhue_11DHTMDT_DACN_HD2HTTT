@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-2">
    <div class="d-flex flex-wrap align-items-end justify-content-between gap-2 mb-3">
        <div>
            <h3 class="fw-bold mb-1">Bảng điều khiển</h3>
            <div class="text-muted">Theo dõi nhanh tình trạng hệ thống</div>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 dashboard-card">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted fw-semibold">Tổng bệnh nhân</div>
                        <div class="display-6 fw-bold mt-1">@ViewBag.TongBenhNhan</div>
                    </div>
                    <div class="dash-icon text-primary"><i class="bi bi-people"></i></div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 dashboard-card">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted fw-semibold">Tổng bác sĩ</div>
                        <div class="display-6 fw-bold mt-1">@ViewBag.TongBacSi</div>
                    </div>
                    <div class="dash-icon text-success"><i class="bi bi-heart-pulse"></i></div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 dashboard-card">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted fw-semibold">Tổng lịch hẹn</div>
                        <div class="display-6 fw-bold mt-1">@ViewBag.TongLich</div>
                    </div>
                    <div class="dash-icon text-danger"><i class="bi bi-calendar-check"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-lg-5">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <div class="fw-bold">Bác sĩ có nhiều lịch nhất</div>
                        <span class="badge bg-warning text-dark rounded-pill px-3 py-2">Top</span>
                    </div>
                    <div class="fs-4 fw-bold">@ViewBag.TopBacSi</div>
                    <div class="text-muted mt-1">@ViewBag.TopSoLich lịch hẹn</div>

                    <div class="mt-4 d-grid gap-2">
                        <a class="btn btn-primary rounded-3" asp-controller="Admin" asp-action="DanhSachLich">
                            <i class="bi bi-list-check me-2"></i>Xem danh sách lịch hẹn
                        </a>
                        <a class="btn btn-outline-primary rounded-3" asp-controller="Admin" asp-action="BacSi">
                            <i class="bi bi-heart-pulse me-2"></i>Quản lý bác sĩ
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="fw-bold mb-2">Số lịch hẹn theo tháng</div>
                    <canvas id="lichChart" height="120"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const labels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.ChartLabels));
    const dataValues = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.ChartValues));
    const ctx = document.getElementById('lichChart').getContext('2d');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Số lịch hẹn',
                data: dataValues
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { display: true } }
        }
    });
</script>
}
